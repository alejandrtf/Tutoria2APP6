<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity__pantalla_resultado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android.alejandra.tutoria2app6.Activity_PantallaResultado">

    <TextView
        android:id="@+id/tvLabelEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/labelEquipo" />

    <TextView
        android:id="@+id/tvLabelPuestoEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvLabelEquipo"
        android:layout_alignStart="@+id/tvLabelEquipo"
        android:layout_below="@+id/tvLabelEquipo"
        android:layout_marginRight="10dp"
        android:text="@string/labelPuestoEquipo" />

    <TextView
        android:id="@+id/tvPuestoEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNombreEquipo"
        android:layout_toRightOf="@+id/tvLabelPuestoEquipo"
        android:background="#f9ea07"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tvNombreEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f9ea07"
        android:text="@string/app_name"
        android:layout_alignBaseline="@+id/tvLabelEquipo"
        android:layout_alignBottom="@+id/tvLabelEquipo"
        android:layout_alignLeft="@+id/tvPuestoEquipo"
        android:layout_alignStart="@+id/tvPuestoEquipo"
        />
</RelativeLayout>
